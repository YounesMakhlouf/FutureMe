@{
    ViewData["Title"] = "Home Page";
}
@model FutureMe.Models.Letter


<div class="text-center">
   
    <div class="fixed-image-container">
        <img src="~/images/pic1.png" alt="Mirror">
    </div>
    <div class="cool-text">
        My Future, 2 Seconds Ago
    </div>
    <form asp-action="saveLetter" style="width:15%;margin: 60px auto 0 600px; text-align:left ">

        <div>
            <textarea id="title" rows="1" cols="" placeholder="Title goes here..." class="titleField" asp-for="Title"></textarea>
        </div>
            <div>
            <textarea id="userText" rows="4" cols="50" placeholder="You'll thank yourself later for this... ♡ " class="user-input" asp-for="Content"></textarea>
            </div>
        <input type="hidden" asp-for="Id" />
        <fieldset>
            <div style="font-size:large ">One More Step to Go:</div>
            <div class="form-group row">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                <input type="email" class="email" id="email" placeholder="Enter email" asp-for="Email">
                <small id="emailHelp" class="form-text text-muted">Top Secret <i class="bi bi-emoji-wink-fill"></i></small>
            </div>
            <div class="form-group">
                <label for="date" class="form-label mt-4">Sent Now, Received:</label>
                <input type="datetime-local" class="form-control" id="date" asp-for="SendingDate">
            </div>
            <br />
            <fieldset class="form-group">
                <div class="mt-4" style="font-size:large">You want this to be :</div>
                <br />
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                    <label class="form-check-label" for="optionsRadios1">
                        Private
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                    <label class="form-check-label" for="optionsRadios2">
                        Public
                    </label>
                </div>

            </fieldset>
            <br />

            <button type="submit" class="btn btn-primary">Send</button>
        </fieldset>
    </form>

</div>
