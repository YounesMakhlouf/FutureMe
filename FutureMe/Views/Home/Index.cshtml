@{
    ViewData["Title"] = "Home Page";
}
@model FutureMe.Models.Letter

    <div class="fixed-image-container">
        @if (TempData["Success"] != null)
        {
            <div class="success text-center">
                @TempData["Success"]
            </div>
        }
        <img src="~/images/pic1.png" alt="Mirror">
        <section class="smol-background-picture__content">
            <form asp-action="saveLetter" class="grid-container mt-5">
                <fieldset class="flow">
                    <input type="text" id="title" rows="1" cols="" placeholder="Title goes here..." class="form-control" asp-for="Title" />
                    <textarea id="userText" rows="20" cols="50" placeholder="You'll thank yourself later for this... ♡ " class="form-control" asp-for="Content"></textarea>
                </fieldset>
                <fieldset class="wrapper">
                    <div>One More Step to Go:</div>
                    <div class="form-group row">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email" asp-for="Email" autocomplete>
                        <small id="emailHelp" class="form-text text-muted">Top Secret <i class="fa-solid fa-face-smile-wink"></i></small>
                    </div>
                    <div class="form-group">
                        <label for="date" class="form-label mt-4">Sent Now, Received:</label>
                        <input type="date" class="form-control" id="date" asp-for="SendingDate" min=@DateTime.Now>
                        <div>@Html.ValidationMessageFor(model => model.SendingDate)</div>
                    </div>
                    <fieldset class="form-group flow wrapper">
                        <div class="mt-4">You want this to be :</div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="optionsRadios" asp-for="IsPublic" id="optionsRadios1" value="false" checked>
                            <label class="form-check-label" for="optionsRadios1">
                                Private
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="optionsRadios" asp-for="IsPublic" id="optionsRadios2" value="true">
                            <label class="form-check-label" for="optionsRadios2">
                                Public
                            </label>
                        </div>

                    </fieldset>
                    <button type="submit" class="btn btn-primary">Send</button>
                    <div class="cool-text mt-5">
                        My Future, 2 Seconds Ago
                    </div>
                </fieldset>
            </form>
        </section>
    </div>